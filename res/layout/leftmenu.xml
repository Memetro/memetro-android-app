        <!-- Participants -->
        <LinearLayout
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/participantsMenu">

            <ImageView
                    android:src="@drawable/menu_dna"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>

            <TextView
                    android:paddingLeft="9dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#888888"
                    android:text="@string/participants_menu"/>
        </LinearLayout>

        <!-- Memetro -->
        <LinearLayout
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/memetroMenu">

            <ImageView
                    android:src="@drawable/menu_person"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>

            <TextView
                android:paddingLeft="9dp"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#888888"
                android:text="@string/memetro_menu"/>
        </LinearLayout>

        <!-- Configuration -->
        <LinearLayout
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/configMenu">

            <ImageView
                    android:src="@drawable/menu_brain"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>

            <TextView
                    android:paddingLeft="9dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#888888"
                    android:text="@string/configuration_menu"/>
        </LinearLayout>

        <!-- Info App -->
        <LinearLayout
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/infoMenu">

            <ImageView
                    android:src="@drawable/menu_dna"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>

            <TextView
                    android:paddingLeft="9dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#888888"
                    android:text="@string/info_menu"/>
        </LinearLayout>

        <!-- Logout -->
        <LinearLayout
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/logoutMenu">

            <ImageView
                    android:src="@drawable/menu_logout"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"/>

            <TextView
                    android:paddingLeft="9dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#888888"
                    android:text="@string/logout_menu"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>